CREATE TABLE questions (
    id INT AUTO_INCREMENT PRIMARY KEY,
    question TEXT NOT NULL,
    option1 VARCHAR(255) NOT NULL,
    option2 VARCHAR(255) NOT NULL,
    option3 VARCHAR(255) NOT NULL,
    correct_option INT NOT NULL,
    explanation TEXT NOT NULL
);

INSERT INTO questions (question, option1, option2, option3, correct_option, explaination) VALUES
('What is the capital of France?', 'Paris', 'London', 'Berlin', 1, 'Paris'),
('What is 2 + 2?', '3', '4', '5', 2, '4'),
('What is the capital of Japan?', 'Seoul', 'Tokyo', 'Beijing', 2, 'Tokyo'),
('Which planet is known as the Red Planet?', 'Earth', 'Mars', 'Jupiter', 2, 'Mars'),
('What is the largest ocean on Earth?', 'Atlantic Ocean', 'Indian Ocean', 'Pacific Ocean', 3, 'Pacific Ocean');
